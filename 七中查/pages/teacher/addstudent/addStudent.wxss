/* 页面全局样式 */
.page-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 导航栏样式 */
.nav-bar {
  height: 44px;
  background: linear-gradient(90deg, #2f54eb, #1d3ba8);
  color: #fff;
  display: flex;
  align-items: center;
  padding: 0 16px;
  box-sizing: border-box;
}

.nav-back {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.nav-back:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.nav-title {
  flex: 1;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
}

.nav-right {
  width: 32px;
  height: 32px;
}

/* 页面头部标题 */
.page-header {
  height: 50px;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  border-radius: 12px;
  margin: 16px;
  padding: 24px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  animation: fadeIn 0.3s ease-out forwards;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* 表单项 */
.form-item {
  margin-bottom: 24px;
}

.item-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: block;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4px;
  font-size: 12px;
}

.form-input {
  width: 100%;
  height: 44px;
  font-size: 14px;
  color: #333;
  padding: 0 12px;
  border: 1px solid #e5e6eb;
  border-radius: 8px;
  box-sizing: border-box;
  transition: all 0.2s;
  background-color: #fafafa;
}

.form-input:focus {
  border-color: #2f54eb;
  background-color: #fff;
  box-shadow: 0 0 0 3px rgba(47, 84, 235, 0.1);
}

.form-input::placeholder {
  color: #c9cdD4;
}

.input-error {
  border-color: #ff4d4f;
}

.error-tip {
  color: #ff4d4f;
  font-size: 12px;
  margin-top: 4px;
  min-height: 16px;
  line-height: 1.4;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 44px;
  background-color: #2f54eb;
  color: #fff;
  font-size: 16px;
  border-radius: 22px;
  margin-top: 16px;
  font-weight: 500;
  letter-spacing: 1px;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn:not([disabled]):active {
  background-color: #1d3ba8;
  transform: scale(0.98);
}

.submit-btn[disabled] {
  background-color: #a0b4f5;
  color: #e6efff;
}

/* 提示卡片 */
.tips-card {
  background-color: #f0f7ff;
  border-left: 4px solid #2f54eb;
  border-radius: 6px;
  padding: 12px 16px;
  display: flex;
  align-items: flex-start;
  margin-top: 16px;
}

.tips-icon {
  margin-right: 8px;
  margin-top: 2px;
}

.tips-text {
  font-size: 12px;
  color: #4e5969;
  line-height: 1.6;
}