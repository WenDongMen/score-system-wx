.page-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  background: #1677ff;
  color: #fff;
  padding: 10px 15px;
}
.nav-back {
  display: flex;
  align-items: center;
}
.back-text {
  margin-left: 5px;
  font-size: 14px;
}
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

/* 表单 */
.form-container {
  padding: 15px;
  background: #fff;
  margin: 10px;
  border-radius: 8px;
}
.form-item {
  margin-bottom: 20px;
}
.item-label {
  font-size: 14px;
  margin-bottom: 5px;
  color: #333;
}
.required {
  color: #ff4d4f;
}
.form-input {
  height: 40px;
  padding: 0 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  font-size: 14px;
}
.error-tip {
  font-size: 12px;
  color: #ff4d4f;
  margin-top: 5px;
}
.submit-btn {
  width: 100%;
  height: 45px;
  background: #1677ff;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}