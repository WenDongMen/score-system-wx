/* 全局容器 */
.container {
  padding-bottom: 60px; /* 给底部tabBar留空间 */
  background: #f5f5f5;
  min-height: 100vh;
}

/* tabBar样式 */
.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: #fff;
  border-top: 1px solid #eee;
  z-index: 999;
}
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #666;
}
.tab-item.active {
  color: #1677ff;
}
.tab-item .icon {
  font-size: 18px;
  margin-bottom: 2px;
}

/* 查询页样式 */
.query-content {
  padding: 10px;
}
.search-box {
  display: flex;
  margin-bottom: 20px;
  gap: 10px;
  background: #fff;
  padding: 10px;
  border-radius: 8px;
}
.search-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  font-size: 14px;
}
.search-btn {
  width: 80px;
  height: 40px;
  line-height: 40px;
  background: #1677ff;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}

.student-list {
  margin-bottom: 20px;
  background: #fff;
  border-radius: 8px;
  padding: 10px;
}
.list-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}
.student-item {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #eee;
  font-size: 14px;
}
.student-item:last-child {
  border-bottom: none;
}
.student-no {
  color: #999;
  font-size: 12px;
}

.score-container {
  background: #fff;
  border-radius: 8px;
  padding: 10px;
  margin-top: 10px;
}
.container-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}
.score-table {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 4px;
  margin-bottom: 20px;
}
.table-header {
  display: flex;
  background: #f8f8f8;
  font-weight: bold;
  font-size: 14px;
}
.table-row {
  display: flex;
  font-size: 14px;
}
.table-col {
  flex: 1;
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}
.table-col:last-child {
  border-right: none;
}
.table-row:last-child .table-col {
  border-bottom: none;
}

.chart-box {
  margin-top: 20px;
}
.chart-title {
  font-size: 16px;
  margin-bottom: 10px;
  color: #333;
}

/* 管理页样式 */
.manage-content {
  padding: 10px;
}
.btn-group {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}
.func-btn {
  flex: 1;
  height: 40px;
  background: #1677ff;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}
.manage-content .student-list {
  border: 1px solid #eee;
  border-radius: 4px;
}
.list-header {
  display: flex;
  background: #f8f8f8;
  font-weight: bold;
  font-size: 14px;
}
.list-item {
  display: flex;
  font-size: 14px;
}
.list-col {
  flex: 1;
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.list-item:last-child .list-col {
  border-bottom: none;
}

