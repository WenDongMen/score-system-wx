.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20px;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  background: #1677ff;
  color: #fff;
  padding: 10px 15px;
}
.nav-back {
  display: flex;
  align-items: center;
}
.back-text {
  margin-left: 5px;
  font-size: 14px;
}
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

/* 折线图 */
.chart-box {
  padding: 10px;
  background: #fff;
  margin: 10px;
  border-radius: 8px;
}

/* 成绩列表 */
.score-list {
  background: #fff;
  margin: 10px;
  border-radius: 8px;
}
.list-header {
  display: flex;
  background: #f8f8f8;
  font-weight: bold;
  font-size: 14px;
}
.list-item {
  display: flex;
  font-size: 14px;
}
.list-col {
  flex: 1;
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.list-item:last-child .list-col {
  border-bottom: none;
}