/* 学生页面容器 */
.student-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx; /* 为底部tabBar预留空间 */
  box-sizing: border-box;
}

/* 学生信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  margin-right: 30rpx;
}

.user-info .username {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-info .id-card {
  font-size: 26rpx;
  color: #999;
}

/* 功能列表 */
.func-list {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.func-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.func-item:last-child {
  border-bottom: none;
}

.func-left {
  display: flex;
  align-items: center;
}

.func-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.func-name {
  font-size: 30rpx;
}

.func-right {
  font-size: 28rpx;
  color: #ccc;
}

/* 密码修改弹窗（统一样式，删除重复定义） */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999; /* 最高层级 */
}

.dialog-content {
  width: 650rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
  z-index: 10000;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #333;
}

.form-input input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.pwd-strength {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.strength-weak {
  color: #f5222d;
}

.strength-middle {
  color: #fa8c16;
}

.strength-strong {
  color: #52c41a;
}

.form-msg {
  font-size: 26rpx;
  color: #f5222d;
  text-align: center;
  margin-bottom: 20rpx;
}

.dialog-btns {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  border: none; /* 去除按钮默认边框 */
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.btn-confirm {
  background-color: #2f54eb;
  color: white;
}

/* 底部tabBar */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 999;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 24rpx;
}

.tab-item.active {
  color: #2f54eb;
}

.tab-item .icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-item .text {
  font-size: 24rpx;
}