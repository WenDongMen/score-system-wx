/* 页面全局样式：浅色背景+全屏居中 */
.login-page {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰：紫色渐变圆环（增强层次感） */
.bg-decor {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(156, 39, 176, 0.1) 0%, rgba(94, 53, 177, 0.05) 100%);
  z-index: 0;
}
.decor-1 {
  width: 800rpx;
  height: 800rpx;
  top: -200rpx;
  left: -200rpx;
}
.decor-2 {
  width: 600rpx;
  height: 600rpx;
  bottom: -150rpx;
  right: -150rpx;
}

/* 登录主卡片：白色背景+悬浮阴影+圆角 */
.login-card {
  position: relative;
  z-index: 1;
  width: 100%;
  max-width: 550rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 顶部标题区样式 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}
.header-icon-container {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f3e5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-icon {
  width: 80rpx;
  height: 80rpx;
}
.icon-fallback {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.header-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 表单区样式 */
.login-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}
/* 表单项：底部边框+hover动效 */
.form-item {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 18rpx 0;
  transition: all 0.3s ease;
}
/* 输入框聚焦时：边框变色+轻微上浮 */
.form-item:focus-within {
  border-bottom-color: #9c27b0;
  transform: translateY(-2rpx);
}
/* 表单图标样式 */
.item-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}
.item-icon-fallback {
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 输入框样式 */
.item-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
}
/* 输入框占位符样式 */
.input-placeholder {
  color: #ccc;
  font-size: 24rpx;
}
/* 密码显隐切换按钮 */
.pwd-toggle-wrap {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}
.pwd-toggle-wrap:hover {
  background-color: #f5f5f5;
}
.pwd-toggle {
  width: 36rpx;
  height: 36rpx;
}
.pwd-toggle-fallback {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 错误提示样式 */
.error-message {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #ff4d4f;
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: -10rpx;
}
.error-icon {
  font-size: 24rpx;
}

/* 忘记密码样式 */
.forgot-pwd {
  text-align: right;
  margin-top: 10rpx;
}
.forgot-pwd text {
  font-size: 24rpx;
  color: #9c27b0;
  transition: color 0.3s ease;
}
.forgot-pwd text:hover {
  color: #7e22ce;
}

/* 登录按钮样式：紫色渐变背景+圆角+加载态 */
.login-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background: linear-gradient(90deg, #9c27b0 0%, #7e22ce 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 46rpx;
  padding: 0;
  margin-top: 10rpx;
}
/* 按钮点击反馈 */
.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}
/* 按钮禁用态（覆盖默认样式） */
.login-btn[disabled] {
  background: linear-gradient(90deg, #e1bee7 0%, #ce93d8 100%);
  color: #fff;
  opacity: 0.8;
}

/* 底部测试账号提示 */
.test-account-tip {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 20rpx;
}
.tip-text {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}