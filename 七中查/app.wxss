/* 全局样式重置 */
page {
  --primary-color: #2f54eb; /* 主蓝色 */
  --text-color: #333;
  --gray-color: #999;
  --red-color: #f5222d;
  background-color: #f8f9fa;
  font-size: 28rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 16rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.btn-danger {
  background-color: #fff;
  color: var(--red-color);
  border: 1px solid var(--red-color);
  border-radius: 16rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}
/* 全局样式变量 */
:root {
  --primary-color: #2f5496; /* 主色调（蓝色） */
  --text-color: #333;       /* 主要文字颜色 */
  --red-color: #f53f3f;     /* 红色（必填项） */
}

/* 全局默认样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  color: var(--text-color);
}

/* 清除默认样式 */
input, button {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
}

button::after {
  border: none; /* 清除按钮默认边框 */
}