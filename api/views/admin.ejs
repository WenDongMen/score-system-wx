<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <title>管理员后台 - 学生成绩管理系统</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      margin: 0;
      font-family: "Microsoft YaHei", sans-serif;
      background: #f5f7fa;
    }

    .nav {
      height: 64px;
      background: linear-gradient(135deg, #2f54eb, #4096ff);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: space-between; /* 两端对齐放退出按钮 */
      padding: 0 20px;
      font-size: 20px;
      font-weight: 600;
    }

    .nav-right {
      display: flex;
      align-items: center;
      gap: 16px;
      font-size: 14px;
      font-weight: normal;
    }

    .logout-btn {
      padding: 6px 12px;
      background: rgba(255,255,255,0.2);
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .logout-btn:hover {
      background: rgba(255,255,255,0.3);
    }

    .container {
      max-width: 1000px;
      margin: 30px auto;
      padding: 0 20px;
    }

    .card {
      background: #fff;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 6px 20px rgba(0,0,0,.08);
      margin-bottom: 24px;
    }

    .card-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .form-row {
      display: flex;
      gap: 12px;
      margin-bottom: 16px;
      flex-wrap: wrap; /* 移动端换行 */
    }

    input {
      flex: 1;
      min-width: 200px; /* 移动端最小宽度 */
      padding: 10px 12px;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      font-size: 14px;
    }

    button {
      padding: 10px 18px;
      border: none;
      border-radius: 8px;
      background: #2f54eb;
      color: #fff;
      font-size: 14px;
      cursor: pointer;
      transition: opacity 0.2s;
    }

    button:hover {
      opacity: 0.9;
    }

    button.danger {
      background: #f5222d;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid #eee;
      text-align: left;
      font-size: 14px;
    }

    th {
      background: #fafafa;
      font-weight: 600;
    }

    .oper-btn {
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      cursor: pointer;
      display: inline-block;
      margin-right: 8px;
    }

    .del-btn {
      background: #fef0f0;
      color: #f5222d;
    }

    footer {
      text-align: center;
      padding: 20px;
      color: #999;
      font-size: 12px;
    }

    /* 移动端适配 */
    @media (max-width: 600px) {
      .nav {
        font-size: 18px;
      }
      .card {
        padding: 16px;
      }
      th, td {
        padding: 8px;
        font-size: 13px;
      }
    }
  </style>
</head>

<body>
  <div class="nav">
    <div>管理员后台</div>
    <div class="nav-right">
      <span id="userName">加载中...</span>
      <span class="logout-btn" onclick="logout()">退出登录</span>
    </div>
  </div>

  <div class="container">
    <!-- 新增教师 -->
    <div class="card">
      <div class="card-title">新增教师</div>
      <div class="form-row">
        <input id="username" placeholder="教师用户名" />
        <input id="password" type="password" placeholder="初始密码" />
        <button onclick="addTeacher()">新增</button>
      </div>
    </div>

    <!-- 教师列表 -->
    <div class="card">
      <div class="card-title">教师列表</div>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>用户名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody id="teacherList">
          <!-- 模拟数据 -->
          <tr>
            <td>1</td>
            <td>teacher001</td>
            <td>
              <span class="oper-btn del-btn" onclick="deleteTeacher(1)">删除</span>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td>teacher002</td>
            <td>
              <span class="oper-btn del-btn" onclick="deleteTeacher(2)">删除</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <footer>© 学生成绩管理系统</footer>

  <script src="/js/auth.js"></script>
  <script>
    // 页面加载时校验管理员角色
    window.onload = function() {
      // 校验角色，非管理员则跳登录
      const user = checkRole('admin');
      if (!user) return;

      // 显示当前登录用户名
      document.getElementById('userName').textContent = user.username;

      // 模拟加载教师列表（实际项目调用接口）
      loadTeacherList();
    };

    // 新增教师
    function addTeacher() {
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value.trim();

      if (!username) {
        alert('请输入教师用户名');
        return;
      }
      if (!password) {
        alert('请输入初始密码');
        return;
      }

      // 模拟请求（实际项目替换为真实接口）
      fetch('/admin/teacher', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + localStorage.getItem('token')
        },
        body: JSON.stringify({ username, password })
      })
      .then(res => res.json())
      .then(data => {
        if (data.code === 200) {
          alert('新增教师成功');
          // 清空输入框
          document.getElementById('username').value = '';
          document.getElementById('password').value = '';
          // 重新加载列表
          loadTeacherList();
        } else {
          alert('新增失败：' + data.message);
        }
      })
      .catch(err => {
        alert('网络错误：' + err.message);
      });
    }

    // 删除教师
    function deleteTeacher(id) {
      if (!confirm('确定要删除该教师吗？')) return;

      // 模拟请求（实际项目替换为真实接口）
      fetch(`/admin/teacher/${id}`, {
        method: 'DELETE',
        headers: {
          'Authorization': 'Bearer ' + localStorage.getItem('token')
        }
      })
      .then(res => res.json())
      .then(data => {
        if (data.code === 200) {
          alert('删除成功');
          loadTeacherList(); // 重新加载列表
        } else {
          alert('删除失败：' + data.message);
        }
      })
      .catch(err => {
        alert('网络错误：' + err.message);
      });
    }

    // 加载教师列表
    function loadTeacherList() {
      // 模拟接口请求，实际项目替换为真实接口
      fetch('/admin/teacher', {
        headers: {
          'Authorization': 'Bearer ' + localStorage.getItem('token')
        }
      })
      .then(res => res.json())
      .then(data => {
        if (data.code === 200) {
          // 清空列表
          const list = document.getElementById('teacherList');
          list.innerHTML = '';
          // 填充数据（这里用模拟数据，实际用data.data）
          const mockData = [
            { id: 1, username: 'teacher001' },
            { id: 2, username: 'teacher002' }
          ];
          mockData.forEach(item => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
              <td>${item.id}</td>
              <td>${item.username}</td>
              <td>
                <span class="oper-btn del-btn" onclick="deleteTeacher(${item.id})">删除</span>
              </td>
            `;
            list.appendChild(tr);
          });
        }
      })
      .catch(err => {
        console.error('加载教师列表失败：', err);
      });
    }
  </script>
</body>
</html>